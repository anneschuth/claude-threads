{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/index.ts",
    "src/mcp/permission-server.ts",
    "src/statusline/writer.ts",
    "src/**/*.test.ts",
    "tests/**/*.ts"
  ],
  "project": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts"],
  "ignore": [
    "src/test-utils/**/*"
  ],
  "ignoreDependencies": ["prettier", "hono"],
  "ignoreBinaries": ["pkill", "sleep", "prettier", "knip", "dist/index.js"],
  "ignoreExportsUsedInFile": true
}
